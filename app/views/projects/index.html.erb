<h2 class="d-flex justify-content-center" style="color:#E0C097!important;">Projects</h1>

<div class="album p-3 row">
<div class="container">
<div class="d-flex row">
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 px-5">
<% @projects.each do |project| %>
    <div class="col-md-4 py-2">
      <div class="card shadow-sm py-3 align-items-center" style="background-color: #E0C097!important; min-height: 420px;">
      <div class="d-flex align-items-center">
      <div class="card-body d-flex flex-column align-items-center justify-content-center">
        <h2 class="d-flex justify-content-center text-center"><%= project.title %></h2>
        <div class="col px-2">
          <p class="d-flex justify-content-center text-center lead" style="line-height: 1.75; font-size:14px"><%= project.description %></p>
          <hr>
          <div class="d-flex justify-content-center">
          <p><%= link_to 'Show', project, :style => 'color:#2D2424!important;'%></p>
          <% if user_signed_in? %>
            <p class="mx-1">  |  </p>
            <p><%= link_to 'Edit', edit_project_path(project), :style => "color: #2D2424" %></p>
            <p class="mx-1">  |  </p>
            <p><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :style => "color: #2D2424" %></p>
          <% end %>
          </div>
        </div>
      </div>
      </div>
      </div>
    </div>
  
<% end %>
</div>
</div>
</div>
</div>


